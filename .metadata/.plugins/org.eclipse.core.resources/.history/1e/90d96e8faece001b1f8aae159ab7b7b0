package week2_exercises;

public class P22FirstLastCharSame {
	/*
	 * Given a method with a string input. Write code to test if first and last
	 * characters are same. Incase they are same return 1 else return -1 as output.
	 * Note: consider case. Example: input = "the picture was great" (first
	 * character = 't', last character = 't') output = 1
	 */

	int verifyCharacter(String str) {
		if (str.charAt(0) == str.charAt(str.length() - 1)) {
			return 1;
		} else {
			return -1;
		}
	}

	public static void main(String[] args) {
		P22FirstLastCharSame obj = new P22FirstLastCharSame();

		System.out.println(obj.verifyCharacter("the picture was great"));

	}

}
